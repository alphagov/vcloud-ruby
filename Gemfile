source 'http://rubygems.org'

gemspec

gem 'rake', :group => [:development, :test]

group :development do
  gem 'awesome_print'
  gem 'pry'
  gem 'redcarpet'
  gem 'yard'
end

group :test do
  gem 'coveralls', :require => false
  gem 'rspec'
  gem 'rspec-mocks'
  gem 'simplecov', :require => false
  gem 'webmock'
end
